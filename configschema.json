{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",

  "properties": {
    "useMockData": {
      "type": "boolean",
      "description": "Whether or not to use mock data instead of the real tracker API. If true, pulls from Lange's Dropbox.",
      "default": false
    },
    "displayDuration": {
      "type": "number",
      "description": "How long (in seconds) most things show on-screen for.",
      "default": 10
    },
    "twitch": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "properties": {
        "channelId": {
          "type": "string",
          "description": "The ID (not name!) of the Twitch channel to operate on."
        },
        "oauthToken": {
          "type": "string",
          "description": "The OAuth token to use to make API requests."
        },
        "titleTemplate": {
          "type": "string",
          "description": "The template used to set the title of the stream whenever the current run changes."
        },
        "clientId": {
          "type": "string",
          "description": "The Client ID of the Twitch API application to use when sending API requests."
        },
        "bitsOffset": {
          "type": "number",
          "description": "The amount of bits to subtract from the total shown.",
          "default": 0
        },
        "debug": {
          "type": "boolean",
          "description": "If true, enables additional debug logging for some Twitch systems.",
          "default": false
        }
      },
      "required": ["channelId", "oauthToken", "clientId", "bitsOffset", "debug"],
      "default": null
    },
    "prizes": {
      "type": ["object", "null"],
      "properties": {
        "sum": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "default": []
        },
        "grand": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "default": []
        }
      },
      "default": {
        "sum": [],
        "grand": []
      }
    },
    "donation": {
      "type": ["object", "null"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "pusherKey": {
          "type": "string"
        },
        "apiKey": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "mock": {
          "type": "boolean"
        },
        "mockAmount": {
          "type": "number",
          "default": 100,
          "minimum": 0,
          "exclusiveMinimum": true
        },
        "mockInterval": {
          "type": "number",
          "default": 30,
          "minimum": 0,
          "exclusiveMinimum": true
        }
      },
      "required": ["enabled", "pusherKey", "apiKey", "slug"],
      "default": null
    },
    "tracker": {
      "type": ["object", "null"],
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "schedule": {
          "type": ["object", "null"],
          "properties": {
            "id": {
              "type": "string"
            },
            "game": {
              "type": "string"
            },
            "category": {
              "type": "string"
            },
            "runTime": {
              "type": "string"
            },
            "setupTime": {
              "type": "string"
            },
            "runners": {
              "type": "array",
              "minItems": 1,
              "maxItems": 4,
              "items": {
                "type": "object",
                "properties": {
                  "runner": {
                    "type": "string"
                  },
                  "twitch": {
                    "type": "string"
                  }
                }
              }
            },
            "notes": {
              "type": "string"
            },
            "extra": {
              "type": "string"
            }
          },
          "required": ["id"],
          "default": null
        }
      },
      "description": "Login information for the private areas of the tracker API.",
      "required": ["username", "password"],
      "default": null
    },
    "youtubeUploadScriptPath": {
      "type": "string"
    },
    "donationSocketUrl": {
      "type": "string"
    },
    "googlePlayMusic": {
      "type": ["object", "null"],
      "description": "Allow connecting to Google Play Music Desktop player",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable the Google Play Music Desktop Player module"
        },
        "forcePlay": {
          "type": ["object", "null"],
          "description": "Force GPMDP to play on boot if it is not playing",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "type": {
              "description": "Allowed values: playlists",
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "shuffle": {
              "type": "string",
              "default": "NO_SHUFFLE"
            },
            "repeat": {
              "type": "string",
              "default": "NO_REPEAT"
            }
          },
          "default": null
        }
      },
      "required": ["enabled"],
      "default": null
    },
    "techDashboardShowAudioEngineer": {
      "type": "boolean",
      "default": false
    }
  }
}
